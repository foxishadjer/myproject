=simple_form_for(@profil, html: {class: 'form-horizontal'}) do |f|
	=f.input :societe, label: "Nom de la société", input_html:{class: "form-control"}
	=f.input :avatar, as: :file, label: "Logo"
	=f.collection_select :secteur_id, Secteur.all, :id, :name, {promt: "Veuillez choisir un secteur", label: "Secteur"}, input_html:{class: "dropdown-toggle"}
	=f.input :tel, label: "Tel", input_html:{class: "form-control"}
	=f.input :email, label: "Email", input_html:{class: "form-control"}
	=f.input :adresse, label: "Adresse", input_html:{class: "form-control"}
	=f.input :description, label: "Description", input_html:{class: "form-control"}
	%br/
	=f.button :submit